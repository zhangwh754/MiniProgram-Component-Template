{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": false,
    "noImplicitAny": false,
    "allowJs": true,
    "rootDir": "./MiniProgram",
    "outDir": "./dist",
    "types": [
      "wechat-miniprogram",
      "./typings"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "MiniProgram/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}